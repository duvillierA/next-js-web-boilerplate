{
    "name": "@boilerplate/web",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "clean": "rm -rf .turbo node_modules coverage .next",
        "coverage": "vitest run --coverage",
        "dev": "next dev --turbopack",
        "build": "NODE_ENV=production next build",
        "start": "next start",
        "lint": "next lint",
        "playwright:install": "npx playwright install",
        "format": "next lint --fix",
        "test": "npm run test:node && npm run test:dom && npm run test:e2e",
        "test:dev": "vitest dev",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:node": "vitest run --project=node",
        "test:dom": "vitest run --project=dom",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@boilerplate/utils": "*",
        "@next/third-parties": "^15.4.1",
        "next": "15.4.1",
        "next-intl": "^4.3.4",
        "next-themes": "^0.4.6",
        "posthog-js": "^1.257.0",
        "posthog-node": "^5.5.0",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "zod": "^4.0.5"
    },
    "devDependencies": {
        "@boilerplate/eslintconfig": "*",
        "@boilerplate/testconfig": "*",
        "@boilerplate/ui": "*",
        "@playwright/test": "^1.54.1",
        "@tailwindcss/postcss": "^4",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@vitest/coverage-v8": "^3.2.4",
        "jsdom": "^26.1.0",
        "tailwindcss": "^4",
        "tw-animate-css": "^1.3.5"
    }
}
