{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "component",
      "description": "Enter the name of the component",
      "default": "",
      "type": "promptString"
    }
  ],
  "tasks": [
    {
      "label": "Run Vitest Coverage",
      "type": "shell",
      "command": "npx",
      "args": [
        "vitest",
        "run",
        "--coverage"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Vitest Tests",
      "type": "shell",
      "command": "npx",
      "args": [
        "vitest",
        "run"
      ],
      "group": {
        "kind": "test"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Add Shadcn Component",
      "type": "shell",
      "command": "npx",
      "args": [
        "shadcn@latest",
        "add",
        "${input:component}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/packages/ui"
      },
      "group": {
        "kind": "build"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}
